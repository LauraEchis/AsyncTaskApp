<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">


    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/name"
            android:textSize="24sp" android:layout_margin="8sp" android:textStyle="bold"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/model" android:layout_weight="1"
                android:textSize="18sp" android:layout_margin="8sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/manufacturer" android:layout_weight="1"
                android:textSize="18sp" android:layout_margin="8sp"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cost_in_credits"
            android:textSize="18sp" android:layout_margin="8sp" android:textStyle="italic"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/length" android:layout_weight="1"
                android:textSize="18sp" android:layout_margin="8sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/max_atmosphering_speed"
                android:layout_weight="1"
                android:textSize="18sp" android:layout_margin="8sp"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/crew"
            android:textSize="18sp" android:layout_margin="8sp" android:textStyle="italic"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/passengers" android:layout_weight="1"
                android:textSize="18sp" android:layout_margin="8sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cargo_capacity" android:layout_weight="1"
                android:textSize="18sp" android:layout_margin="8sp"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/consumables"
            android:textSize="18sp" android:layout_margin="8sp" android:textStyle="italic"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/hyperdrive_rating" android:layout_weight="1"
                android:textSize="18sp" android:layout_margin="8sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/mglt" android:layout_weight="1"
                android:textSize="18sp" android:layout_margin="8sp"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/starships_class"
            android:textSize="18sp" android:layout_margin="8sp" android:textStyle="italic"/>
</LinearLayout>